<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top navbartop">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="navbar-brand">
                    <a href="http://localhost:57797"><img class="brand-logo" alt="Brand" src="~/logo.png"></a>
                </div>
            </div>
            <div>
                <ul class="list-inline navbar-right">
                    <li id="main-selector">@Html.ActionLink("Jaunākas ziņas", "Main", "News")</li>
                    <li id="main-selector">@Html.ActionLink("Tēmas", "Topics", "News", new { id = 1 }, null)</li>
                    <li id="main-selector">@Html.ActionLink("Par mums", "About", "News")</li>
                    <li id="main-selector"><span id="icon1" class="glyphicon glyphicon-list-alt"></span>@Html.ActionLink("Pievienot ziņu", "NewNews", "News")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

</body>
</html>
