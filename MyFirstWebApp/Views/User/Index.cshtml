@model List<MyFirstWebApp.Models.Users>
@{
    ViewBag.Title = "Lietotaju saraksts";
}

<h2>Lietotaji</h2>

<div>
        @Html.ActionLink("Add new", "Create", "User", null, new { @class = "btn btn-success" })
</div><br />
<table class="table table-striped">
    <tr>
        <th>Vards</th>
        <th>Uzvards</th>
        <th></th>
    </tr>

    @foreach(var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@Html.ActionLink("Edit", "Edit", "User", new { id = user.Id }, null)</td>
        </tr>
    }
</table>

