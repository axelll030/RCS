@model List<FirstWebApplication.Models.MovieModel>
@{
    ViewBag.Title = "Lietotaju saraksts";
}

<h2>Lietotaji</h2>

<div>
    @Html.ActionLink("Pievienot jaunu", "Create", "User")
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped">
            <tr>
                <th>Vards <span class="badge badge-primary badge-light">123</span></th>
                <th>Uzvards</th>
                <th></th>
            </tr>
            @foreach (var user in Model)
            {
                <tr class="table-primary">
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@Html.ActionLink("Rediget", "Edit", "User", new { id = user.Id }, null)</td>
                </tr>
            }
        </table>
    </div>
</div>